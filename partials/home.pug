mixin template(id, title, direction)
  li.home__item(class=`home__item--${id}`)
    a.home__link(href=`/case/${id}`)
      span.home__link__wrapper=title
        img.home__link__media(alt=`${title} Project Preview` data-direction=direction data-src=`/projects/${id}.jpg` data-src-webp=`/projects/${id}.webp`)

section.home
  .home__background
    .home__background__top
    .home__background__bottom

  .home__wrapper
    ul.home__list
      +template('popeyes', 'POPEYES', 'left')
      +template('spotify', 'SPOTIFY', 'right')
      +template('boxpark', 'BOXPARK', 'left')
      +template('turning-tide', 'TURNING TIDE', 'right')
      +template('idris-elba', 'IDRIS ELBA', 'right')
      +template('stoli', 'STOLI VODKA', 'left')
      +template('ocb', 'OLD COMPTON', 'right')
      +template('jack-daniels', '   JACK DANIELS   ', 'left')
     
  div.fullscreen-div