mixin template(id, title, direction)
  li.home__item(class=`home__item--${id}`)
    a.home__link(href=`/case/${id}`)
      span.home__link__wrapper=title
        img.home__link__media(alt=`${title} Project Preview` data-direction=direction data-src=`/projects/${id}.jpg` data-src-webp=`/projects/${id}.webp`)

section.home
  .home__background
    .home__background__top
    .home__background__bottom

  .home__wrapper
    ul.home__list
      +template('xbox-museum', 'POPEYES', 'left')
      +template('bbdo', 'SPOTIFY', 'right')
      +template('peggy-gou', 'BOXPARK', 'left')
      +template('isabel-moranta', 'TURNING TIDE', 'right')
      +template('floema', 'AMAZING GRACE', 'left')
      +template('garoa-skincare', 'IDRIS ELBA', 'right')
      +template('design-embraced', 'STOLI VODKA', 'left')
      +template('kacper-chlebowicz', 'OLD COMPTON', 'right')
      +template('trolli', '   ETEFY   ', 'left')
     
